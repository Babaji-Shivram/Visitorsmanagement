{
  "ConnectionStrings": {
    "DefaultConnection": "Server=[YOUR-SERVER-IP];Database=VisitorManagementDB_Prod;Integrated Security=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Key": "YourProductionSecretKeyThatIsAtLeast32CharactersLongAndSecure!",
    "Issuer": "VisitorManagementAPI",
    "Audience": "VisitorManagementClient"
  },
  "EmailSettings": {
    "SmtpServer": "your-smtp-server.com",
    "Port": 587,
    "Username": "your-email@company.com",
    "Password": "your-email-password",
    "EnableSsl": true,
    "FromEmail": "your-email@company.com",
    "FromName": "Company Visitor Management System"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
